<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:login="clr-namespace:MovilApp.ViewModels.Login"
             x:Class="MovilApp.Views.Login.SignInView"
             Title="Crear Cuenta">
    <ContentPage.BindingContext>
        <login:SignInViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout 
            Spacing="20"
            HorizontalOptions="Center"
            Padding="30">

            <!-- CONTENEDOR CENTRAL -->
            <Grid 
                MaximumWidthRequest="700"
                HorizontalOptions="Center"
                Padding="20">

                <VerticalStackLayout Spacing="25">

                    <Label 
                        FontSize="Title"
                        Text="Creando nueva cuenta en MusicCoreApp"
                        HorizontalOptions="Center"
                        Margin="0,0,0,10" />

                    <Grid 
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="20"
                        RowSpacing="25">

                        <!-- Nombre -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Apellido y Nombre:"
                               VerticalTextAlignment="Center" />
                        <Entry Grid.Row="0" Grid.Column="1"
                               Text="{Binding Nombre}" />

                        <!-- Email -->
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="Email:"
                               VerticalTextAlignment="Center" />
                        <Entry Grid.Row="1" Grid.Column="1"
                               Text="{Binding Email}" />

                        <!-- Password -->
                        <Label Grid.Row="2" Grid.Column="0"
                               Text="Contraseña:"
                               VerticalTextAlignment="Center" />
                        <Entry Grid.Row="2" Grid.Column="1"
                               Text="{Binding Password}"
                               IsPassword="True" />

                        <!-- Verificar Password -->
                        <Label Grid.Row="3" Grid.Column="0"
                               Text="Verificar Contraseña:"
                               VerticalTextAlignment="Center" />
                        <Entry Grid.Row="3" Grid.Column="1"
                               Text="{Binding VerifyPassword}"
                               IsPassword="True" />

                        <!-- Botón -->
                        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                Text="Registrarse"
                                Command="{Binding RegistrarseCommand}"
                                Margin="0,10,0,0"
                                HorizontalOptions="Fill" />
                    </Grid>

                </VerticalStackLayout>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>