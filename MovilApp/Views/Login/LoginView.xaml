<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovilApp.Views.Login.LoginView"
             xmlns:viewModels="clr-namespace:MovilApp.ViewModels.Login"
             Title="Iniciar Sesion"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout 
            Spacing="20"
            HorizontalOptions="Center"
            Padding="30">

            <!-- contenedor principal -->
            <Grid 
                MaximumWidthRequest="700"
                HorizontalOptions="Center"
                Padding="20">

                <VerticalStackLayout Spacing="25">

                    <Label 
                        FontSize="28"
                        Text="Inicio de sesión en MusicCoreApp"
                        HorizontalOptions="Center"
                        Margin="0,0,0,10" />

                    <Grid 
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="20"
                        RowSpacing="25">

                        <!-- Email -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Email:"
                               VerticalTextAlignment="Center" />
                        <Entry Grid.Row="0" Grid.Column="1"
                               Text="{Binding Email}" />

                        <!-- Contraseña -->
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="Contraseña:"
                               VerticalTextAlignment="Center" />
                        <Entry Grid.Row="1" Grid.Column="1"
                               Text="{Binding Password}"
                               IsPassword="True" />

                        <!-- Recordar contraseña -->
                        <CheckBox Grid.Row="2" Grid.Column="0"
                                  IsChecked="{Binding RecordarContraseña}"
                                  HorizontalOptions="End"
                                  VerticalOptions="Center" />

                        <Label Grid.Row="2" Grid.Column="1"
                               Text="Recordar contraseña"
                               VerticalOptions="Center" />

                        <!-- Botón iniciar sesión -->
                        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                Text="Iniciar sesión"
                                Command="{Binding IniciarSesionCommand}" />

                        <!-- Botón registrarse -->
                        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                Text="Registrarse"
                                Command="{Binding RegistrarseCommand}"
                                Margin="0,10,0,0" />

                    </Grid>

                </VerticalStackLayout>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>