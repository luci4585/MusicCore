<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MovilApp.ViewModels.Discos"
             x:Class="MovilApp.Views.DiscosView"
             Title="DiscosView">

    <ContentPage.BindingContext>
        <vm:DiscosViewModel />
    </ContentPage.BindingContext>


    <ScrollView Padding="20">
        <StackLayout Spacing="20">

            <!-- Encabezado -->
            <Frame BackgroundColor="LightCoral" 
            Padding="20" 
            CornerRadius="15" 
            HasShadow="True">
                <StackLayout>
                    <Label Text=" Buscar Disco" 
                    FontSize="26" 
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center"/>
                    <Label Text="Encuentra el disco que buscas" 
                    FontSize="14"
                    TextColor="LightBlue"
                    HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Secci贸n de b煤squeda -->
            <Frame BackgroundColor="White" 
            Padding="15" 
            CornerRadius="12" 
            HasShadow="True"
            BorderColor="LightGray">
                <StackLayout Spacing="15">
                    <Label Text="驴Qu茅 disco est谩s buscando?" 
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="DarkSlateGray"/>

                    <!-- SearchBar mejorado -->
                    <Frame BackgroundColor="WhiteSmoke" 
                    Padding="5" 
                    CornerRadius="10"
                    HasShadow="False"
                    BorderColor="LightBlue">
                        <SearchBar Placeholder="Buscar por t铆tulo, genero, artista..." 
                            Text="{Binding TextoBusqueda}"
                            SearchCommand="{Binding BuscarCommand}"
                            BackgroundColor="Transparent"
                            PlaceholderColor="Gray"
                            TextColor="Black"
                            FontSize="16"/>
                    </Frame>
                    <!-- Bot贸n para mostrar/ocultar filtros -->
                    <Button Text=" Buscar" 
                 Command="{Binding BuscarCommand}"
                 BackgroundColor="LightSteelBlue"
                 TextColor="DarkBlue"
                 CornerRadius="8"
                 FontSize="14"/>

                    <!-- Indicador de carga -->
                    <StackLayout IsVisible="{Binding EstaDescargando}" 
                         Orientation="Horizontal" 
                         HorizontalOptions="Center"
                         Spacing="10">
                        <ActivityIndicator IsRunning="{Binding EstaDescargando}"
                                   Color="DodgerBlue"/>
                        <Label Text="Buscando discos..." 
                        TextColor="DodgerBlue"
                        VerticalOptions="Center"
                        FontSize="14"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Secci贸n de resultados -->
            <StackLayout Spacing="15">
                <!-- Encabezado de resultados -->
                <Frame BackgroundColor="LightGreen" 
                Padding="12" 
                CornerRadius="10" 
                HasShadow="True"
                BorderColor="Green">
                    <StackLayout>
                        <Label Text=" Resultados de b煤squeda" 
                        FontSize="18" 
                        FontAttributes="Bold"
                        TextColor="DarkGreen"
                        HorizontalOptions="Center"/>
                        <Label Text="{Binding Discos.Count, StringFormat='{0} discos encontrados'}"
                        FontSize="14"
                        TextColor="DarkGreen"
                        HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Lista de libros en cards mejoradas -->
                <CollectionView ItemsSource="{Binding Discos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                            Padding="20" 
                            Margin="0,8"
                            CornerRadius="15"
                            HasShadow="True"
                            BorderColor="LightSteelBlue">
                                <Grid ColumnDefinitions="Auto, *, Auto" 
                               RowDefinitions="Auto, Auto, Auto">

                                    <!-- cono principal -->
                                    <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="4"
                                    Text="" 
                                    FontSize="40"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Margin="0,0,15,0"/>

                                    <!-- T铆tulo del disco -->
                                    <Label Grid.Column="1" Grid.Row="0"
                                    Text="{Binding Titulo}" 
                                    FontSize="18"
                                    FontAttributes="Bold"
                                    TextColor="DarkSlateGray"
                                    LineBreakMode="WordWrap"/>

                                    <!-- Editorial -->
                                    <StackLayout Grid.Column="1" Grid.Row="1" 
                                         Orientation="Horizontal" 
                                         Spacing="5"
                                         Margin="0,5,0,0">
                                        <Label Text="" FontSize="14"/>
                                        <Label Text="{Binding Artista, StringFormat='Orador/a: {0}'}" 
                                        FontSize="14"
                                        TextColor="Gray"
                                        LineBreakMode="TailTruncation"/>
                                    </StackLayout>

                                    <!-- A帽o de publicaci贸n -->
                                    <StackLayout Grid.Column="1" Grid.Row="2" 
                                         Orientation="Horizontal" 
                                         Spacing="5"
                                         Margin="0,2,0,0">
                                        <Label Text="" FontSize="14"/>
                                        <Label Text="{Binding Genero}" 
                                        FontSize="14"
                                        TextColor="Gray"/>
                                    </StackLayout>

                                    <!-- Bot贸n de acci贸n -->
                                    <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="4"
                                     Text="&#x0a;Ver"
                                     BackgroundColor="LightBlue"
                                     TextColor="DarkBlue"
                                     CornerRadius="10"
                                     FontSize="12"
                                     WidthRequest="60"
                                     HeightRequest="60"
                                     VerticalOptions="Center"/>


                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>